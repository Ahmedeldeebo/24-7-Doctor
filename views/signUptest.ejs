.container {
margin: 50px auto;
}

.card {
width: 400px;
height: 700px;
display: flex;
align-items: center;
justify-content: center;
padding: 10px 25px;
position: relative;
box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;

}

.card .fas.fa-arrow-right {
position: absolute;
bottom: -100px;
background-color: #20b1b1;
height: 90px;
width: 150px;
display: flex;
align-items: center;
justify-content: center;
border-radius: 150%;
color: rgb(255, 255, 255);
opacity: 0;
transform: translateY(50%);
transition: all 0.5s ease;
}

.card:hover .fas.fa-arrow-right {
bottom: 150px;
opacity: 2;
}

.card .fa.fa-star-of-life,
.fas.fa-user,
.fas.fa-user-doctor {
font-size: 40px;
background-color: #0000000d;
height: 100px;
width: 100px;
display: flex;
align-items: center;
justify-content: center;
border-radius: 50%;
color: #2e92c0;
}

.card .h4 {
font-weight: 700;
}

.container .content {
max-width: 300px;
}

.container .content .h-6 {
color: #4e9525;
font-weight: 600;
}

.container .content .btn.btn-primary {
padding: 15px;
background-color: #20b1b1;
color: white;
border-radius: 0px;
border: none;
box-shadow: none;
}

.card:hover .fa.fa-star-of-life,
.card:hover .fas.fa-user,
.card:hover .fas.fa-user-doctor {
color: rgb(248, 248, 248);
background-color: #20b1b1;
}

@media (max-width:990px) {
