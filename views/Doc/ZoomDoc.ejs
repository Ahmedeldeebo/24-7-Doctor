  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(rgba(35, 58, 192, 0.8), rgba(45, 50, 54, 0.8)),
        url("https://i.imgur.com/dGgyENr.png");
      background-size: cover;
    }

    .user-content h2 {
      text-align: center;
      font-size: 40px;
      position: fixed;
      left: 50%;
      top: 33%;
      color: #000;
      transform: translate(-50%, 10%);
    }

    .box {
      position: relative;
      width: 200px;
      height: 40px;
      top: 100%;
      display: flex;
      align-items: center;
    }

    .box span {
      display: block;
      height: 40px;
      width: 40px;
      background: #000;
      border-radius: 50%;
      animation: all-effect 0.6s linear infinite alternate;
      transform: scale(0);
    }

    .box span:nth-child(1) {
      animation-delay: 0.1s;
    }

    .box span:nth-child(2) {
      animation-delay: 0.2s;
    }

    .box span:nth-child(3) {
      animation-delay: 0.3s;
    }

    .box span:nth-child(4) {
      animation-delay: 0.4s;
      background: #00b9f5;
    }

    .box span:nth-child(5) {
      animation-delay: 0.5s;
      background: #00b9f5;
    }
    .box span:nth-child(6) {
      animation-delay: 0.6s;
      background: #00b9f5;
    }

    @keyframes all-effect {
      100% {
        transform: scale(1);
      }
    }
    #button {
      text-align: center;
      font-size: 20px;
      position: fixed;
      left: 56%;
      top: 55%;
      transform: translate(-50%, 10%);
    }
    .card {
      width: 450px;
      height: 380px;
      align-items: center;
      position: relative;
      cursor: pointer;
    }
    #link {
      margin-right: 180px;
      margin-top: 120px;
    }
    .center {
  margin: 0;
  position: absolute;
  top: 90%;
  left: 50%;
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
.img-responsive{
    margin: 0;
    margin-top: 20px;
    width: 1110px;
}
  </style>
