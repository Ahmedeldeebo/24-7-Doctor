    <div class="container"style="margin-top:100px">
      <div class="row my-2 mx-2 main">
        <!--left-column-->
        <div class="col-md-4 col-12 mycol" style="margin-top:130px">
          <!--image-->
          <img
            src="/img/jc-gellidon-UIp163xCV6w-unsplash.jpg"
            width="100%"
            height="100%"
            class="img-thumbnail" 
          />
        </div>
        <!--right-column-->
        <div class="col-md-8 col-12 xcol">
          <h2 class="title pt-5 pb-3">Doctor Sign up</h2>
          <form
            class="myform row g-3 needs-validation"
            action="http://localhost:5000/doctor/Doctor-register"
            method="POST"
            validate
          >

            <div class="row rone">
              <div class="form-group col-md-6 fone py-3">
                <input
                  type="text"
                  class="form-control"
                  placeholder="First name"
                  required =""
                  name="Doc_FirstName"
                />
              </div>
              <div class="form-group col-md-6 ftwo py-3">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Last name"
                  required =""
                  name="Doc_Lastname"
                />
              </div>
            </div>

            <div class="row rtwo">
              <div class="form-group col-md-6 fthree py-3">
                <input
                  type="text"
                  class="form-control jk"
                  placeholder="Username"
                  required
                  name="Doc_username"
                />
              </div>
              <div class="form-group col-md-6 ffour py-3">
                <input
                  type="email"
                  class="form-control lm"
                  placeholder="......@gmail.com"
                  required
                  name="Doc_Email"
                />
              </div>
            </div>

            <div class="row rthree">
              <div class="form-group col-md-6 ffive py-3">
                <input
                  type="password"
                  class="form-control"
                  placeholder="Password"
                  required
                  name="Doc_password"
                />
              </div>
              <div class="form-group col-md-6 fsix py-3">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Specialization"
                  required
                  name="Specialization_Name"
                />
              </div>
            </div>

                                
            <div class="row rfour">
              <div class="form-group col-md-6 fseven py-3">
                <select
                  class="form-select"
                  id="validationCustom04"
                  required
                  name="Doc_Gender"
                >
                  <option selected disabled>Gender</option>
                  <option>Male</option>
                  <option>Female</option>
                </select>
              </div>
              <div class="form-group col-md-6 feight py-3">
                <input type="date" class="form-control" placeholder="m/d/y"
                required name="Doc_birtday">
               </div>
            </div> 
            <p class="text-center font-weight-bold">Remember your username and password</p>

                     <div class="alert alert-light text-danger" role="alert">
                      <%- errorMessage %>
                    </div>
          
      

            <div class="row rfive">
              <div class="form-group col-md-6 fnine py-3">
                <div class="card-body">
                  <div class="wrapper text-left">
                   
                      <button class="btn btn-primary" type="submit">Create an account</button>
                      <!-- onclick="sSuccess('success-message')" -->
                  </div>
              </div>
            </form>
          </div>


          
