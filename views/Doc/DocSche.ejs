    <input class="form-control" list="Upfront Fees" id="exampleDataList" placeholder="Type to search..." name="Upfront_fees">
    <datalist id="Upfront Fees">
      <option value="150 EGP">
      <option value="200 EGP">
      <option value="250 EGP">
