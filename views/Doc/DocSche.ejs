   <label for="exampleDataList" class="form-label" >Time-Period</label>
    <input class="form-control" list="Time-Period" id="exampleDataList" placeholder="From --:--am till --:--pm"name="Start_Time">
    <datalist id="Time-Period">
      <option value="All day">
      <option value="From 9:00am till 5:00pm"></option>
      <option value="From 2:00pm till 9:00pm"></option>
      <option value="Enter your own">Enter your own</option>
    </datalist>

    <br>
    <br>

    <label for="exampleDataList" class="form-label">Patients per-day</label>
    <input class="form-control" list="Patients per-day" id="exampleDataList" placeholder="Type to search..." name="Meeting_Maximum_Patient">
    <datalist id="Patients per-day">
      <option value="10">10</option>
      <option value="20">20</option>
      <option value="30">30</option>
      <option value="Enter your own">Enter your own</option>
    </datalist>

