  <input class="form-check-input" type="checkbox" value="Zoom Meeting" id="flexCheckDefault" name="Available_methods" />
  <label class="form-check-label" for="flexCheckDefault">Zoom Meeting</label>
</div>
<div class="form-check">
  <input class="form-check-input" type="checkbox" value="WhatsApp" id="flexCheckDefault" name="Available_methods" />
